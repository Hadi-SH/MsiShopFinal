@model IEnumerable<MsiShopFinal.Models.Customers>

@{
    ViewBag.Title = "Index";
}

<h2>Our Customers</h2>

<p>
    @Html.ActionLink("Register as Customer", "RegisterCust", "Account")

</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IntrestedIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BestBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpentTimeOnGaming)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IntrestedIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BestBrand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpentTimeOnGaming)
        </td>
    </tr>
}

</table>
