@model IEnumerable<MsiShopFinal.Models.Customers>

@{
    ViewBag.Title = "Index";
}

<h2>Our Customers</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @if (User.IsInRole("CanManageProducts"))
        {
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.IntrestedIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BestBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        @if (User.IsInRole("CanManageProducts"))
        {
            <th>
                @Html.DisplayNameFor(model => model.DetailedAddress)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.TitleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpentTimeOnGaming)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (User.IsInRole("CanManageProducts"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.IntrestedIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BestBrand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        @if (User.IsInRole("CanManageProducts"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.DetailedAddress)
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpentTimeOnGaming)
        </td>
        @if (User.IsInRole("CanManageProducts"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })
            </td>
        }
        </tr>
    }

</table>
