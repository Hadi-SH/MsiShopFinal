@model IEnumerable<MsiShopFinal.Models.NOrders>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

@if (User.IsInRole("CanManageProducts"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResellerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProdSerialNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResellerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdSerialNumber)
            </td>
            @if (User.IsInRole("CanManageProducts"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>
